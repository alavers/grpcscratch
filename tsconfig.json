{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "checkJs": false,
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*"]
}
